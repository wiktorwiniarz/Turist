@model EquipmentRentalCore.Models.AccountViewModels.ManageUserViewModel

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Zmień hasło</h4>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <form asp-area="" asp-controller="Account" asp-action="EditPassword" method="post">
                    <div class="form-group">
                        <label asp-for="PasswordEditViewModel.OldPassword"></label>
                        <input asp-for="PasswordEditViewModel.OldPassword" class="form-control" />
                        <span asp-validation-for="PasswordEditViewModel.OldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PasswordEditViewModel.NewPassword"></label>
                        <input asp-for="PasswordEditViewModel.NewPassword" class="form-control" />
                        <span asp-validation-for="PasswordEditViewModel.NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PasswordEditViewModel.NewPasswordConfirmation"></label>
                        <input asp-for="PasswordEditViewModel.NewPasswordConfirmation" class="form-control" />
                        <span asp-validation-for="PasswordEditViewModel.NewPasswordConfirmation" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-success">Zapisz</button>
                </form>
            </div>
        </div>
    </div>
</div>