@model EquipmentRentalCore.Models.RentViewModels.RentListModel

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Prolong rental (months)</h4>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <form asp-area="" asp-controller="Rental" asp-action="_ProlongRentalModal" method="post">
                    <input hidden asp-for="ProlongModalData.RentID" />
                    <div class="form-group">
                        <label asp-for="ProlongModalData.MonthProlongation"></label>
                        <input asp-for="ProlongModalData.MonthProlongation" type="number" class="form-control" max="10" min="1" value="1"/>
                        <span asp-validation-for="ProlongModalData.MonthProlongation" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-success">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>